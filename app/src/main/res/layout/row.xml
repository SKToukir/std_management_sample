<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="5dp">

    <TextView
        android:layout_margin="2dp"
        android:textColor="#000"
        android:textSize="16sp"
        android:id="@+id/txtStdname"
        android:text="Student Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="2dp"
        android:textColor="#000"
        android:id="@+id/txtStdId"
        android:text="Student ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="2dp"
        android:textColor="#000"
        android:id="@+id/txtStdDpt"
        android:text="Student Department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="2dp"
        android:textColor="#000"
        android:id="@+id/txtStdResult"
        android:text="Student Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<View
    android:background="#c4c4c4"
    android:layout_width="match_parent"
    android:layout_height="2dp"/>

</LinearLayout>